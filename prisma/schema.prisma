generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum UserRole {
  ADMIN
  SALES
  CUSTOMER
  WAREHOUSE
}

enum PartnerType {
  CUSTOMER
  SUPPLIER
  BOTH
}

enum DocStatus {
  DRAFT
  SENT
  APPROVED
  COMPLETED
  CANCELLED
  PAID
  PENDING
}

enum TransactionType {
  DEBT
  CREDIT
}

// Models

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  surname   String
  phone     String?
  company   String?
  role      UserRole @default(CUSTOMER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  favorites Favorite[]
  cart      Cart?

  assignedRoleId String?
  assignedRole   Role?   @relation(fields: [assignedRoleId], references: [id])

  @@map("users")
}

// Renamed from UserRole to Role to avoid conflict with enum UserRole
model Role {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  permissions Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  users User[]

  @@map("roles")
}

model Category {
  id    String  @id @default(uuid())
  name  String
  slug  String  @unique
  image String?

  // Relations
  products Product[]

  @@map("categories")
}

model Partner {
  id          String      @id @default(uuid())
  name        String
  type        PartnerType
  taxNumber   String?
  contactName String?
  email       String?
  phone       String?
  address     String?
  balance     Decimal     @default(0) @db.Decimal(10, 2)

  // Relations
  orders       Order[]
  proposals    Proposal[]
  invoices     Invoice[]
  waybills     Waybill[]
  transactions Transaction[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("partners")
}

model Warehouse {
  id          String  @id @default(uuid())
  name        String
  shelfCount  Int     @default(0)
  rowCount    Int     @default(0)
  description String?

  // Relations
  products Product[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("warehouses")
}

model Product {
  id          String  @id @default(uuid())
  code        String  @unique
  name        String
  barcode     String?
  description String?
  image       String?

  categoryId String?
  category   Category? @relation(fields: [categoryId], references: [id])

  // Stock & Pricing
  stock      Int     @default(0)
  minStock   Int     @default(0)
  unit       String  @default("Adet")
  buyPrice   Decimal @default(0) @db.Decimal(10, 2)
  sellPrice  Decimal @default(0) @db.Decimal(10, 2)
  taxRate    Int     @default(18)
  isActive   Boolean @default(true)
  isFeatured Boolean @default(false)

  // Location
  warehouseId String?
  warehouse   Warehouse? @relation(fields: [warehouseId], references: [id])

  // Relations
  favorites Favorite[]
  cartItems CartItem[]

  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  OrderItem OrderItem[]

  @@map("products")
}

model Proposal {
  id         String    @id @default(uuid())
  number     String    @unique
  date       DateTime
  validUntil DateTime?
  status     DocStatus @default(DRAFT)
  type       String    @default("Satış Teklifi")

  partnerId String
  partner   Partner @relation(fields: [partnerId], references: [id])

  items       ProposalItem[]
  totalAmount Decimal        @default(0) @db.Decimal(10, 2)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("proposals")
}

model ProposalItem {
  id         String   @id @default(uuid())
  proposalId String
  proposal   Proposal @relation(fields: [proposalId], references: [id], onDelete: Cascade)

  productId   String?
  productName String
  quantity    Int
  price       Decimal @db.Decimal(10, 2)
  taxRate     Int
  total       Decimal @db.Decimal(10, 2)

  @@map("proposal_items")
}

model Order {
  id     String    @id @default(uuid())
  number String    @unique
  date   DateTime
  status DocStatus @default(PENDING)

  partnerId String
  partner   Partner @relation(fields: [partnerId], references: [id])

  items       OrderItem[]
  totalAmount Decimal     @default(0) @db.Decimal(10, 2)

  // Relations
  invoices Invoice[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("orders")
}

model OrderItem {
  id      String @id @default(uuid())
  orderId String
  order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  productId   String?
  product     Product? @relation(fields: [productId], references: [id])
  productName String
  quantity    Int
  price       Decimal  @db.Decimal(10, 2)
  total       Decimal  @db.Decimal(10, 2)

  @@map("order_items")
}

model Waybill {
  id     String    @id @default(uuid())
  number String    @unique
  type   String
  date   DateTime
  status DocStatus @default(SENT)
  notes  String?

  partnerId String
  partner   Partner @relation(fields: [partnerId], references: [id])

  items WaybillItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("waybills")
}

model WaybillItem {
  id        String  @id @default(uuid())
  waybillId String
  waybill   Waybill @relation(fields: [waybillId], references: [id], onDelete: Cascade)

  productId   String?
  productName String
  quantity    Int
  unit        String
  description String?

  @@map("waybill_items")
}

model Invoice {
  id      String    @id @default(uuid())
  number  String    @unique
  type    String
  date    DateTime
  dueDate DateTime?
  status  DocStatus @default(PENDING)
  notes   String?

  partnerId String
  partner   Partner @relation(fields: [partnerId], references: [id])

  orderId String?
  order   Order?  @relation(fields: [orderId], references: [id])

  items InvoiceItem[]

  subTotal    Decimal @db.Decimal(10, 2)
  taxTotal    Decimal @db.Decimal(10, 2)
  totalAmount Decimal @db.Decimal(10, 2)

  transaction Transaction?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("invoices")
}

model InvoiceItem {
  id        String  @id @default(uuid())
  invoiceId String
  invoice   Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  productId   String?
  productName String
  quantity    Int
  price       Decimal @db.Decimal(10, 2)
  taxRate     Int
  total       Decimal @db.Decimal(10, 2)

  @@map("invoice_items")
}

model Transaction {
  id          String          @id @default(uuid())
  date        DateTime        @default(now())
  description String
  type        TransactionType
  amount      Decimal         @db.Decimal(10, 2)

  partnerId String
  partner   Partner @relation(fields: [partnerId], references: [id])

  invoiceId String?  @unique
  invoice   Invoice? @relation(fields: [invoiceId], references: [id])

  createdAt DateTime @default(now())

  @@map("transactions")
}

model Favorite {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())

  // Relations
  userId    String
  user      User    @relation(fields: [userId], references: [id])
  productId String
  product   Product @relation(fields: [productId], references: [id])

  @@unique([userId, productId])
  @@map("favorites")
}

model Cart {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  userId String     @unique
  user   User       @relation(fields: [userId], references: [id])
  items  CartItem[]

  @@map("carts")
}

model CartItem {
  id       String @id @default(uuid())
  quantity Int

  // Relations
  cartId    String
  cart      Cart    @relation(fields: [cartId], references: [id])
  productId String
  product   Product @relation(fields: [productId], references: [id])

  @@unique([cartId, productId])
  @@map("cart_items")
}

model ContactMessage {
  id        String   @id @default(uuid())
  firstName String
  lastName  String
  email     String
  subject   String?
  message   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  @@map("contact_messages")
}
